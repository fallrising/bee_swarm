# Bee Swarm 环境变量配置

# =============================================================================
# GitHub 配置
# =============================================================================

# 产品经理 GitHub Token
GITHUB_TOKEN_PM=ghp_xxxxxxxxxxxxxxxxxxxx

# 后端开发 GitHub Token
GITHUB_TOKEN_BACKEND=ghp_xxxxxxxxxxxxxxxxxxxx

# 前端开发 GitHub Token
GITHUB_TOKEN_FRONTEND=ghp_xxxxxxxxxxxxxxxxxxxx

# QA工程师 GitHub Token
GITHUB_TOKEN_QA=ghp_xxxxxxxxxxxxxxxxxxxx

# DevOps工程师 GitHub Token
GITHUB_TOKEN_DEVOPS=ghp_xxxxxxxxxxxxxxxxxxxx

# GitHub Webhook 密钥
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitHub 仓库信息
GITHUB_REPOSITORY=your-org/your-repo
GITHUB_OWNER=your-org

# =============================================================================
# AI 工具 API 密钥
# =============================================================================

# OpenAI API 密钥 (用于 Claude Code)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# Anthropic API 密钥 (用于 Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# Google Gemini API 密钥
GEMINI_API_KEY=xxxxxxxxxxxxxxxxxxxx

# Warp API 密钥
WARP_API_KEY=xxxxxxxxxxxxxxxxxxxx

# Cursor API 密钥
CURSOR_API_KEY=xxxxxxxxxxxxxxxxxxxx

# =============================================================================
# 容器配置
# =============================================================================

# VNC 密码配置
VNC_PASSWORD_PM=vnc123
VNC_PASSWORD_BACKEND=vnc123
VNC_PASSWORD_FRONTEND=vnc123
VNC_PASSWORD_QA=vnc123
VNC_PASSWORD_DEVOPS=vnc123

# TTYD 终端密码配置
TTYD_PASSWORD_PM=MyTerminalPassword123
TTYD_PASSWORD_BACKEND=MyTerminalPassword123
TTYD_PASSWORD_FRONTEND=MyTerminalPassword123
TTYD_PASSWORD_QA=MyTerminalPassword123
TTYD_PASSWORD_DEVOPS=MyTerminalPassword123

# Cloudflare Tunnel 配置
CLOUDFLARE_TUNNEL_URL=https://your-tunnel-url.trycloudflare.com
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# =============================================================================
# 数据库和缓存配置
# =============================================================================

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# PostgreSQL 配置 (可选)
POSTGRES_URL=postgresql://user:password@localhost:5432/beeswarm
POSTGRES_USER=beeswarm
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=beeswarm

# =============================================================================
# 监控配置
# =============================================================================

# Prometheus 配置
PROMETHEUS_URL=http://localhost:9090

# Grafana 配置
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# 告警配置
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# =============================================================================
# 应用配置
# =============================================================================

# 应用环境
NODE_ENV=production
DEBUG=false

# 日志级别
LOG_LEVEL=info

# 时区设置
TZ=UTC

# 语言设置
LANG=en_US.UTF-8

# =============================================================================
# 安全配置
# =============================================================================

# JWT 密钥
JWT_SECRET=your-jwt-secret-key

# 加密密钥
ENCRYPTION_KEY=your-encryption-key

# 会话密钥
SESSION_SECRET=your-session-secret

# =============================================================================
# 网络配置
# =============================================================================

# 应用端口
APP_PORT=5000
WEBHOOK_PORT=5000

# 外部访问域名
EXTERNAL_DOMAIN=your-domain.com

# SSL 配置
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# 性能配置
# =============================================================================

# 容器资源限制
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1.0

# 并发配置
MAX_CONCURRENT_TASKS=10
MAX_CONCURRENT_REQUESTS=100

# 超时配置
REQUEST_TIMEOUT=30000
TASK_TIMEOUT=300000

# =============================================================================
# 备份配置
# =============================================================================

# 备份目录
BACKUP_DIR=/backup/bee-swarm

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 自动备份时间 (cron 格式)
BACKUP_SCHEDULE="0 2 * * *"

# =============================================================================
# 开发配置 (仅开发环境)
# =============================================================================

# 开发模式
DEV_MODE=false

# 热重载
HOT_RELOAD=false

# 调试端口
DEBUG_PORT=9229

# 测试配置
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/beeswarm_test

# =============================================================================
# 第三方服务配置
# =============================================================================

# Notion API (产品经理使用)
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxx

# Figma API (设计协作)
FIGMA_API_KEY=figd_xxxxxxxxxxxxxxxxxxxx
FIGMA_FILE_KEY=xxxxxxxxxxxxxxxxxxxx

# Jira API (项目管理)
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token

# Slack API (通知)
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxx
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxx

# =============================================================================
# 部署配置
# =============================================================================

# 部署环境
DEPLOYMENT_ENV=production

# 部署区域
DEPLOYMENT_REGION=us-west-2

# VPS 数量
VPS_COUNT=20

# 负载均衡器配置
LOAD_BALANCER_URL=https://lb.your-domain.com

# 健康检查配置
HEALTH_CHECK_URL=https://your-domain.com/health
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 自定义配置
# =============================================================================

# 自定义角色配置
CUSTOM_ROLES=analyst,designer,architect

# 自定义AI工具
CUSTOM_AI_TOOLS=custom-tool-1,custom-tool-2

# 自定义工作流
CUSTOM_WORKFLOW_ENABLED=false
CUSTOM_WORKFLOW_CONFIG=/app/config/custom-workflow.json 